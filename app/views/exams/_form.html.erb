
<%= simple_form_for [@course, @exam] do |form| %>
  <% if exam.errors.any? %>
    <div class="alert alert-danger">
        <% exam.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
    </div>
  <% end %>

    <%= form.input :title,
        label: 'Titulo',
        input_html: {id: :exam_title},
        wrapper_html: {class: 'form-group'} %>

    <%= form.input :description,
        label: 'Descripcion',
        input_html: {id: :exam_description},
        wrapper_html: {class: 'form-group'} %>

    <%= form.input :min_grade,
        label: 'nota minima',
        input_html: {id: :exam_min_grade},
        wrapper_html: {class: 'form-group'} %>


    <%= form.input :exam_date,
        label: 'Fecha ',
        input_html: {id: :exam_exam_date},
        wrapper_html: {class: 'form-group'} %>


    <div class="actions">
        <%= form.submit @exam.persisted? ? 'Modificar' : 'Crear',
            class: 'btn btn-success',
            wrapper_html: {class: 'form-group'} %>

        <%= link_to 'Cancelar',
            course_exams_path( @exam.persisted? ? exam.course : params[:course_id]) ,
            class: 'btn btn-primary' %>
    </div>

<% end %>

<h1>Estudiantes</h1>

<table class='table table-stripped'>
    <thead>
        <tr>
            <th>Nombre  </th>
            <th>Apellido</th>
            <th>Dni</th>
            <th>Numero de Estudiante</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.dni %></td>
                <td><%= student.student_number %></td>
                <td>
                  <%= link_to 'Ver',
                      course_student_path(student.course, student),
                      class: 'btn btn-primary' %>

                  <%= link_to 'Editar',
                      edit_course_student_path(student.course, student),
                      class: 'btn btn-success' %>
                  <%= link_to 'Eliminar',
                      course_student_path(student.course, student),
                      method: :delete,
                      data: { confirm: 'Seguro que desea eliminar este estudiante?' },
                      class: 'btn btn-danger' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Crear Estudiante', new_course_student_path(@students.first.course), class: 'btn btn-success' %>

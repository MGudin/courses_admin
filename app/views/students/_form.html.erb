<%= simple_form_for([@course, @student]) do |form| %>

  <%= form.input :name, input_html: {id: :student_name}, wrapper_html: {class: 'form-group'} %>

    <%= form.input :last_name, input_html: {id: :student_last_name}, wrapper_html: {class: 'form-group'} %>

    <%= form.input :dni, input_html: {id: :student_dni}, wrapper_html: {class: 'form-group'} %>

    <%= form.input :email, input_html: {id: :student_dni}, wrapper_html: {class: 'form-group'} %>

    <%= form.input :student_number, input_html: {id: :student_student_number}, wrapper_html: {class: 'form-group'} %>

    <div class="actions">
      <%= form.submit class: 'btn btn-success', wrapper_html: {class: 'form-group'}%>
    </div>
<% end %>

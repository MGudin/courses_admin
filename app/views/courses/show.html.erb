
<h1>Cursada <%= @course.year %> </h1>

<table class="table table-condensed" >
  <thead>
    <tr>
      <th>
        Estudiante
      </th>
      <% @exams.each do |exam| %>
      <th><%= exam.title %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td> <%= student.last_name %>, <%= student.name %></td>
      <% @exams.each do |exam| %>
      <td>
        <%= student.grade_for exam %>
      </td>
      <% end %>
    </tr>
    <% end %>
    <!-- estadisticas -->
    <tr>
      <td>
        Cantidad de aprobados
      </td>
      <% @exams.each do |exam| %>
      <td>
        <%= exam.approved_students %>
      </td>
      <% end %>
    </tr>
        <tr>
      <td>
        Cantidad de desaprobados
      </td>
      <% @exams.each do |exam| %>
      <td>
        <%= exam.unapproved_students %>
      </td>
      <% end %>
        </tr>
            <tr>
      <td>
        Porcentaje de aprobacion
      </td>
      <% @exams.each do |exam| %>
      <td>
        <%= exam.approved_rate %>
      </td>
      <% end %>
    </tr>


  </tbody>
</table>

<%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-success' %>
<%= link_to 'Volver', courses_path, class: 'btn btn-primary' %>

<link rel="stylesheet" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" type="text/css" media="screen" charset="utf-8">
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" charset="utf-8"></script>
<script>
$(document).ready(function(){
    $('#data-table').DataTable();
});
</script>

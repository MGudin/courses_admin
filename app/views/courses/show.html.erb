
<h1>Cursada <%= @course.year %> </h1>

<table class="table table-stripped" id="data-table">
    <thead>
        <tr>
            <th>examen</th>
            <th>estudiante</th>
            <th>nota</th>
        </tr>
    </thead>
    <tbody>
        <% @course.exams.each do |exam| %>
            <% @course.students.each do |student| %>
                <tr>
                    <td><%= exam %></td>
                    <td><%= student %></td>
                    <td><%= student.grade_for exam %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>

<p> Aca van las estadisticas </p>

<%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-success' %>
<%= link_to 'Volver', courses_path, class: 'btn btn-primary' %>

<link rel="stylesheet" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" type="text/css" media="screen" charset="utf-8">
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" charset="utf-8"></script>
<script>
$(document).ready(function(){
    $('#data-table').DataTable();
});
</script>

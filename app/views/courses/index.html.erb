<h1>Cursos</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>a√±o</th>
      <th colspan="3"></th>
      <th colspan="2"> Examenes </th>
      <th colspan="2"> Estudiantes </th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.year %></td>
      <td colspan="3">
        <%= link_to 'Ver', course, class: 'btn btn-success' %>
        <%= link_to 'Editar', edit_course_path(course), class: 'btn btn-primary' %>
        <%= link_to 'Eliminar',
            course,
            method: :delete,
            class: 'btn btn-danger' %>
      </td>
      <td colspan="2">
        <%= link_to 'Listado', course_exams_path(course), class: 'btn btn-success' %>
        <%= link_to 'Agregar', new_course_exam_path(course), class: 'btn btn-primary' %>
      </td>
      <td colspan="2">
        <%= link_to 'Listado', course_students_path(course), class: 'btn btn-success' %>
        <%= link_to 'Agregar', new_course_student_path(course), class: 'btn btn-primary' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Cursos</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Year</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @courses.each do |course| %>
            <tr>
                <td><%= course.year %></td>
                <td>
                    <%= link_to 'Ver', course, class: 'btn btn-success' %>
                    <%= link_to 'Editar', edit_course_path(course), class: 'btn btn-primary' %>
                    <%= link_to 'Eliminar', course, method: :delete, data: { confirm: 'Seguro que desea eliminar este curso?' }, class: 'btn btn-danger' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Crear curso nuevo', new_course_path, class: 'btn btn-success' %>

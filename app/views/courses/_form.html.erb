<%= simple_form_for @course do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> No se pudo guardar el curso: </h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :year,
      label: 'AÃ±o',
      input_html: {id: :course_year},
      wrapper_html: {class: 'form-group'} %>

  <div class="actions">
  <%= form.submit @action,
      class: 'btn btn-success',
      wrapper_html: {class: 'form-group'} %>
  <%= link_to 'Volver',
      courses_path,
      class: 'btn btn-primary' %>
  </div>
<% end %>

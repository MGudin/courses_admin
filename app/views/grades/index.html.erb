<h1>Notas del examen <%= @exam %> del <%= @course %></h1>

<table class="table table-condensed">
  <thead>
    
    <tr>
      <th class="">
        Estudiante
      </th>
      <th class="text-center">
        Nota
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
    
    <tr>
      <td> <%= grade.student %> </td>
      <td class="text-center"> <%= grade.grade %> </td>
      <td>
        <%= link_to 'Editar',
            edit_exam_grade_path(grade.exam, grade),
            class: 'btn btn-primary' %>
      </td>
      <td><%= link_to 'Borrar',
              exam_grade_path(grade.exam,grade),
              method: :delete,
              class: 'btn btn-danger',
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Crear nota',
   new_exam_grade_path(@exam),
   class: 'btn btn-success' %>
   



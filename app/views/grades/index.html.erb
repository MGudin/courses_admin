<%= link_to 'Estudiantes',
    course_students_path(@exam.course),
    class: 'btn btn-primary' %>

<%= link_to 'Evaluaciones',
    course_exams_path(@exam.course),
    class: 'btn btn-primary' %>
<%= link_to 'Curso',
    course_path(@exam.course),
    class: 'btn btn-primary' %>

<h1>Notas del examen <%= @exam %> del <%= @exam.course %></h1>

<% if @grades.any? %>
<table class="table table-condensed">
  <thead>
    
    <tr>
      <th class="">
        Estudiante
      </th>
      <th class="text-center">
        Nota
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
    
    <tr>
      <td> <%= grade.student %> </td>
      <td class="text-center"> <%= grade.grade %> </td>
      <td>
        <%= link_to 'Editar',
            edit_exam_grade_path(grade.exam, grade),
            class: 'btn btn-primary' %>
      </td>
      <td><%= link_to 'Borrar',
              exam_grade_path(grade.exam,grade),
              method: :delete,
              class: 'btn btn-danger',
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3> Aun no hay notas cargadas para este examen </h3>
<% end %>
<%= link_to 'Crear nota',
   new_exam_grade_path(@exam),
   class: 'btn btn-success' %>

